{
  "name": "permission-finder",
  "displayName": "Permission Finder",
  "description": "Find the permission set you need for a specific table.",
  "publisher": "4PS",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eklop4ps/find-permissionset.git"
  },
  "activationEvents": [
    "onFileSystem:aloutlinesyntax",
    "onLanguage:al",
    "onLanguage:alapp",
    "workspaceContains:app.json"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "permission-finder.setPermissionFile",
        "title": "Set Permission File",
        "category": "4PS"
      },
      {
        "command": "permission-finder.searchPermissionSet",
        "title": "Find permission set for object ID",
        "category": "4PS"
      }
    ],
    "configuration": {
      "title": "Permission Finder",
      "properties": {
        "permissionFinder.permissionFilePath": {
          "type": "string",
          "default": "",
          "description": "Path to the permissions JSON file",
          "scope": "resource"
        },
        "permissionFinder.fallbackPermissionSetName": {
          "type": "string",
          "default": "D365 AUTOMATION",
          "description": "Name of the fallback permission set to suggest when an object ID is not found",
          "scope": "resource"
        }
      }
    }
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.39.2",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
